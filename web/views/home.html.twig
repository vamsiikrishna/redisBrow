{% extends layout %}
{% block body %}

    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">redisBrow</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active"><a href="/">Server Status</a></li>
                    <li><a href="/keys">Keys</a></li>
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>


   <div class="col-md-12">

       <div class="col-md-8">
        <p><strong>{{ dbsize }} Keys available.</strong></p>
        <p>Used Memory: {{ info.Memory.used_memory_human }}, peak: {{ info.Memory.used_memory_peak_human }}</p>


    <div role="tabpanel">

        <!-- Nav tabs -->
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#server" role="tab" data-toggle="tab">Server</a></li>
            <li role="presentation"><a href="#clients" role="tab" data-toggle="tab">Clients</a></li>
            <li role="presentation"><a href="#memory" role="tab" data-toggle="tab">Memory</a></li>
            <li role="presentation"><a href="#persistence" role="tab" data-toggle="tab">Persistence</a></li>
            <li role="presentation"><a href="#stats" role="tab" data-toggle="tab">Stats</a></li>
            <li role="presentation"><a href="#replication" role="tab" data-toggle="tab">Replication</a></li>
            <li role="presentation"><a href="#cpu" role="tab" data-toggle="tab">CPU</a></li>
        </ul>

        <!-- Tab panes -->

        <div class="tab-content">



            <div role="tabpanel" class="tab-pane active" id="server">
                {% if info.Server %}
                    <table class="table table-condensed table-hover">
                        <thead>
                        <tr>
                            <th>Key</th>
                            <th>Value</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for key, value in info.Server %}
                            <tr>
                                <td>{{ key }}</td>
                                <td>{{ value }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>


            <div role="tabpanel" class="tab-pane" id="clients">
                {% if info.Clients %}
                    <table class="table table-condensed table-hover">
                        <thead>
                        <tr>
                            <th>Key</th>
                            <th>Value</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for key, value in info.Clients %}
                            <tr>
                                <td>{{ key }}</td>
                                <td>{{ value }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>

            <div role="tabpanel" class="tab-pane" id="memory">
                {% if info.Memory %}
                    <table class="table table-condensed table-hover">
                        <thead>
                        <tr>
                            <th>Key</th>
                            <th>Value</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for key, value in info.Memory %}
                            <tr>
                                <td>{{ key }}</td>
                                <td>{{ value }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>


            <div role="tabpanel" class="tab-pane" id="persistence">
                {% if info.Persistence %}
                    <table class="table table-condensed table-hover">
                        <thead>
                        <tr>
                            <th>Key</th>
                            <th>Value</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for key, value in info.Persistence %}
                            <tr>
                                <td>{{ key }}</td>
                                <td>{{ value }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>

            <div role="tabpanel" class="tab-pane" id="stats">
                {% if info.Stats %}
                    <table class="table table-condensed table-hover">
                        <thead>
                        <tr>
                            <th>Key</th>
                            <th>Value</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for key, value in info.Stats %}
                            <tr>
                                <td>{{ key }}</td>
                                <td>{{ value }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>

            <div role="tabpanel" class="tab-pane" id="replication">
                {% if info.Replication %}
                    <table class="table table-condensed table-hover">
                        <thead>
                        <tr>
                            <th>Key</th>
                            <th>Value</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for key, value in info.Replication %}
                            <tr>
                                <td>{{ key }}</td>
                                <td>{{ value }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>

            <div role="tabpanel" class="tab-pane" id="cpu">
                {% if info.CPU %}
                    <table class="table table-condensed table-hover">
                        <thead>
                        <tr>
                            <th>Key</th>
                            <th>Value</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for key, value in info.CPU %}
                            <tr>
                                <td>{{ key }}</td>
                                <td>{{ value }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% endif %}
            </div>

        </div>
    </div>

       <div class="col-md-4">
       </div>

    </div>

{% endblock body %}